service cloud.firestore {

  match /databases/{database}/documents {
    match /{document=**} {
      allow read;
      allow write: if isAdmin();
  	}
    
    match /SurveyStats/{allDocuments} {
        allow read;
        allow write: if isUser();
        allow create;
    }
  
    match /Contact/{allDocuments} {
        allow read, write: if isAdmin();
        allow create;
    }
    
    match /ContactSaved/{allDocuments} {
        allow read, write: if isAdmin();
    }

    function isAdmin() {
        return get(/databases/$(database)/documents/Users/$(request.auth.uid)).data.roles[1] == true;
      }

    function isUser() {
        return request.auth != null;
    }
  }
  
}